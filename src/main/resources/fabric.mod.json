{
  "schemaVersion": 1,
  "id": "figura",
  "version": "${version}",

  "name": "Figura",
  "description": "Figura is a client-side mod that allows players to change their player model and highly customize it, while also letting other players see their models safely.",
  "authors": [
    "Zandra",
    "Francy-Chan"
  ],
  "contact": {
    "homepage": "http://figura.blancworks.org",
    "sources": "https://github.com/Blancworks/Figura/",
    "issues": "https://github.com/Blancworks/Figura/issues"
  },

  "license": "LGPL-2.1",
  "icon": "assets/figura/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.blancworks.figura.FiguraMod"
    ],
    "modmenu": [
      "net.blancworks.figura.config.ModMenuConfig"
    ]
  },
  "mixins": [
    "figura.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.5",
    "fabric": "*",
    "minecraft": ">=1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  "breaks": {
    "optifine": "*",
    "optifabric": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/ekHGHcH8Af"
      }
    }
  }
}
